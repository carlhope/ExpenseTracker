<Window x:Class="ExpenseTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:local="clr-namespace:ExpenseTracker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,380,9">
        <oxy:PlotView Model="{Binding MyPlotModel}" Height="200" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,10">
            <Border Background="#f0f0f0" Padding="10" Margin="5" CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="Total Spent" FontWeight="Bold" />
                    <TextBlock Text="{Binding TotalSpent, StringFormat=£{0:F2}}" />
                </StackPanel>
            </Border>
            <Border Background="#f0f0f0" Padding="10" Margin="5" CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="This Month" FontWeight="Bold" />
                    <TextBlock Text="{Binding ThisMonthTotal, StringFormat=£{0:F2}}" />
                </StackPanel>
            </Border>
            <Border Background="#f0f0f0" Padding="10" Margin="5" CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="Top Category" FontWeight="Bold" />
                    <TextBlock Text="{Binding TopCategory}" />
                </StackPanel>
            </Border>
        </StackPanel>


        <Button x:Name="Add_Expense_Btn" Content="Add Expense"
        Width="150" Height="40" VerticalAlignment="Bottom"
        FontSize="16"
        Click="OpenAddExpenseWindow_Click" Margin="0,0,0,0" />
        <Button x:Name="History_Btn" Content="History" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Bottom" Height="40" Width="150" Click="History_Btn_Click"/>
    </Grid>
</Window>
