<Window x:Class="ExpenseTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">

        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- At-a-glance stats -->
                <RowDefinition Height="*"/>
                <!-- Chart -->
                <RowDefinition Height="Auto"/>
                <!-- Navigation buttons -->
            </Grid.RowDefinitions>

            <!-- At-a-Glance Summary -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                <Border Background="#f0f0f0" Padding="10" Margin="5" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Total Spent" FontWeight="Bold" />
                        <TextBlock Text="{Binding TotalSpent, StringFormat=£{0:F2}}" />
                    </StackPanel>
                </Border>
                <Border Background="#f0f0f0" Padding="10" Margin="5" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="This Month" FontWeight="Bold" />
                        <TextBlock Text="{Binding ThisMonthTotal, StringFormat=£{0:F2}}" />
                    </StackPanel>
                </Border>
                <Border Background="#f0f0f0" Padding="10" Margin="5" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Top Category" FontWeight="Bold" />
                        <TextBlock Text="{Binding TopCategory}" />
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Chart -->


            <oxy:PlotView Grid.Row="1" Model="{Binding MyPlotModel}" Margin="0,10" Height="{Binding PlotHeight}" />



            <!-- Navigation Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                <Button x:Name="Add_Expense_Btn" Content="Add Expense" Width="150" Height="40" FontSize="16"
                    Click="OpenAddExpenseWindow_Click" Margin="5,0"/>
                <Button x:Name="History_Btn" Content="History" Width="150" Height="40" FontSize="16"
                    Click="History_Btn_Click" Margin="5,0"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
